<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - MVC</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    </head>
    <body>
        <header class="p-3 bg-dark text-white">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                    </a>

                    
                    @if (Context.Session.GetString("Usuario") != null && Context.Session.GetString("Rol") == "Dominio.Huesped")
                    {
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="MisDatos" asp-action="Mis_Datos">Mis Datos</a></li>
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Agenda" asp-action="MiAgenda">Mis Agendas</a></li>

                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Actividad" asp-action="Index">Actividades Disponibles</a></li>
                    
                     </ul>
                    <div class="text-end">
                        <button type="button" class="btn btn-danger"><a asp-area="" asp-controller="Login" asp-action="Logout">Salir</a></button>
                    </div>
                    }

                @if (Context.Session.GetString("Usuario") != null && Context.Session.GetString("Rol") == "Dominio.Operador")
                {
                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="MisDatos" asp-action="Mis_Datos">Mis Datos</a></li>
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Agenda" asp-action="BuscarAgendaXDoc">Buscar Agenda</a></li>
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Agenda" asp-action="ListaDeAgendas">Ver Agenda del día</a></li>
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Agenda" asp-action="ConfirmarAgenda">Confirmar Pagos</a></li>
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Proveedor" asp-action="Index">Proveedores</a></li>
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Actividad" asp-action="Index">Actividades</a></li>

                    </ul>
                    <div class="text-end">
                        <button type="button" class="btn btn-danger"><a asp-area="" asp-controller="Login" asp-action="Logout">Salir</a></button>
                    </div>
                }


                @if (Context.Session.GetString("Usuario") == null)
                    {
                        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                        <li><a class="nav-link px-2 text-white" asp-area="" asp-controller="Actividad" asp-action="Index">Actividades Disponibles</a></li>
                    </ul>
                    <div class="text-end">
                        <button type="button" class="btn btn-outline-light me-2"><a asp-area="" asp-controller="Login" asp-action="Login">Login</a></button>
                        <button type="button" class="btn btn-warning"><a asp-area="" asp-controller="Registro" asp-action="Registro">Registro</a></button>
                    </div>
                    }

                    
                </div>
            </div>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted bg-dark">
            <div class="container">
            &copy; 2023 - Lucas Centurion
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>


