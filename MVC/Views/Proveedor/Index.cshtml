@using Dominio;

<div>
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <div class="container-md">
                <div class="row justify-content-center">
                    <div class="text-white" style="border-radius: 1rem; background-color: rgba(0, 0, 0, 0.8);">
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
                            @foreach (Proveedor unProveedor in ViewBag.ListaProveedores)
                            {
                                <div class="col mb-4">
                                    <table class="table table-dark table-striped">
                                        <tr>
                                            <td>Nombre: @unProveedor.Nombre</td>
                                        </tr>
                                        <tr>
                                            <td>Teléfono: @unProveedor.Telefono</td>
                                        </tr>
                                        <tr>
                                            <td>Dirección: @unProveedor.Direccion</td>
                                        </tr>
                                        <tr>
                                            <td>Descuento: @unProveedor.Descuento%</td>
                                        </tr>
                                    </table>
                                </div>
                            }
                            <div class="col mb-4">
                                <form asp-controller="Proveedor" asp-action="CambiarValorPromo" method="post" id="cambiarPromo" class="justify-content-center">
                                    <div class="d-flex align-items-center">
                                        <select class="form-select me-2" id="NombreProveedor" name="Nombre" required>
                                            <option value="Opcion" required>Seleccione</option>
                                            @foreach (Proveedor unProveedor in ViewBag.ListaProveedores)
                                            {
                                        <option value="@unProveedor.Nombre" required>@unProveedor.Nombre</option>
                                            }
                                        </select>
                                <input type="text" class="form-control me-2" placeholder="00$" name="Descuento" pattern="^(100|[1-9][0-9]?)$" required>
                                        <input type="submit" class="btn btn-primary">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</div>

